{
  "manifest_version": 3,
  "name": "scratchly",
  "version": "1.1.0",
  "description": "Simply write notes and export as .md.",
  "permissions": ["storage", "sidePanel"],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "newtab.html"
  },
  "commands": {
    "open-scratchpad": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "Command+Period"
      },
      "description": "Open scratchly"
    }
  },
  "offline_enabled": true,
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
